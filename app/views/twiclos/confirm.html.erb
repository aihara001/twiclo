<h3>以下の内容で、投稿する。</h3>

<%= form_with(model: @twiclo, url: twiclos_path, local: true) do |form| %>
  <%= form.hidden_field :content %>
  <p>内容:<%= @twiclo.content %></p>
  <%= form.submit  "投稿する" %>
<% end %>

<%= form_with(model: @twiclo, url: new_twiclo_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :content %>
  <%= form.submit "もどる", name: 'back' %>
<% end %>