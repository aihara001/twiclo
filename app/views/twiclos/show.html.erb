<h1>詳細画面</h1>

<h1>ツイート内容: <%= @twiclo.content %></h1>

<% unless @twiclo.user == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(twiclo_id: @twiclo.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<%= link_to '一覧へ戻る', twiclos_path, class: 'btn btn-default' %>